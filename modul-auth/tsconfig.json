{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/server.ts"],
  "exclude": ["node_modules"]
}
